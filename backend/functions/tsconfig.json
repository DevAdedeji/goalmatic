{
  "compilerOptions": {
    "rootDir": "./src",
    "module": "Node16",
    "allowJs": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "outDir": "lib",
    "strict": true,
    "target": "es2017",
    "noEmit": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "vercel-ai.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "convex",
    "src/convex"
  ]
}